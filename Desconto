print('''Plano contratado
[1] Basic
[2] Silver
[3] Gold
[4] Platinum''')
opção = int(input('Qual o plano contratado?'))
faturamento_anual = int(input("Insira o faturamento anual do seu canal"))
if opção == 1:
    total = (faturamento_anual * 30 / 100)
    print('O valor do bônus a ser pago é de: R${}'.format(total))
elif opção == 2:
    total = (faturamento_anual * 20 / 100)
    print('O valor do bônus a ser pago é de: R${}'.format(total))
elif opção == 3:
    total = (faturamento_anual * 10 / 100)
    print('O valor do bônus a ser pago é de: R${}'.format(total))
elif opção == 4:
    total = (faturamento_anual * 5 / 100)
    print('O valor do bônus a ser pago é de: R${}'.format(total))
else:
    total = 0
    print('Opção inválida. Tente novamente!')
